<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:liferay="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        >

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"></android.support.v7.widget.Toolbar>

    <View
        android:id="@+id/divider_login"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/toolbar_login"
        android:background="@drawable/shadow" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dip">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dip"
                android:gravity="center_horizontal"
                android:text="GuruCool...."
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/white"
                android:textSize="34sp" />



            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dip"
                        android:gravity="center_horizontal"
                        android:text="@string/im_a"
                        android:textColor="@android:color/white"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                  <!--  <Button
                        android:id="@+id/button_sme_signup"
                        style="@style/ButtonWhite"
                        android:layout_marginBottom="5dip"
                        android:text="SME"
                        android:layout_weight="1"
                        android:textAllCaps="false"/>

                        <Button
                            android:id="@+id/button_upo_signup"
                            style="@style/ButtonWhite"
                            android:layout_marginBottom="5dip"
                            android:text="UPO"
                            android:layout_weight="1"
                            android:textAllCaps="false"/>-->

                        <Button
                        android:id="@+id/button_teacher_signup"
                        style="@style/ButtonWhite"
                        android:layout_marginBottom="5dip"
                        android:text="@string/teacher"
                        android:textAllCaps="false"
                            android:layout_weight="1"/>


                    <Button
                        android:id="@+id/button_student_signup"
                        style="@style/ButtonWhite"
                        android:layout_marginBottom="5dip"
                        android:text="@string/student"
                        android:textAllCaps="false"
                        android:layout_weight="1"/>
                    <Button
                        android:id="@id/button_login"
                        style="@style/Button_blue_white"
                        android:text="@string/already_have_account"
                        android:textAllCaps="false"
                        android:layout_weight="1"/>

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dip"
                android:gravity="center_horizontal|bottom"
                android:text="@string/txt_sign_up_notice"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                />-->
        </LinearLayout>

    </LinearLayout>

</ScrollView>
